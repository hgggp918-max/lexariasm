$('[data-toggle="form-submit-with-loader"]').on("submit", function() {
	var form = $(this);
	var button = form.find("button[type=submit]");
	button.css('pointer-events', 'none');
	button.css('opacity', '0.5');
	button.html(lang.loading);
});

